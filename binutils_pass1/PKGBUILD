pkgname=binutils_pass1
pkgver=2.38
source=(https://ftp.gnu.org/gnu/${pkgname%_*}/${pkgname%_*}-$pkgver.tar.xz)

build() {
	cd ${pkgname%_*}-$pkgver

	mkdir -v build
	cd       build

	../configure --prefix=/tools \
	             --with-sysroot=$LFS                     \
	             --with-lib-path=/tools/lib:/tools/lib32 \
	             --target=$LFS_TGT                       \
	             --disable-nls                           \
	             --disable-werror                        \
	             --enable-multilib

	make

	mkdir -pv /tools/lib
	ln -sf lib /tools/lib64

	make install -j1
}
