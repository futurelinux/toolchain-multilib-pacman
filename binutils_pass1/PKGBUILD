BINUTILS_VER=2.37
source=(https://ftp.gnu.org/gnu/binutils/binutils-${BINUTILS_VER}.tar.xz)

build() {
	cd binutils-${BINUTILS_VER}

	mkdir -v build
	cd       build

	../configure --prefix=/tools \
	             --with-sysroot=$LFS                     \
	             --with-lib-path=/tools/lib:/tools/lib32 \
	             --target=$LFS_TGT                       \
	             --disable-nls                           \
	             --disable-werror                        \
	             --enable-multilib

	make

	mkdir -pv /tools/lib
	ln -sf lib /tools/lib64

	make install -j1
}
