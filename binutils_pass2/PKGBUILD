BINUTILS_VER=2.37
source=(https://ftp.gnu.org/gnu/binutils/binutils-${BINUTILS_VER}.tar.xz)

build() {
	cd binutils-${BINUTILS_VER}

	mkdir -v build
	cd       build

	CC=$LFS_TGT-gcc                \
	AR=$LFS_TGT-ar                 \
	RANLIB=$LFS_TGT-ranlib         \
	../configure                   \
	    --prefix=/tools            \
	    --disable-nls              \
	    --disable-werror           \
	    --with-lib-path=/tools/lib:/tools/lib32 \
	    --with-sysroot             \
	    --enable-multilib

	make

	make install

	make -C ld clean
	make -C ld LIB_PATH=/usr/lib:/lib:/usr/lib32:/lib32
	cp -v ld/ld-new /tools/bin
}
