CURL_VER=7.80.0
source=(https://curl.se/download/curl-${CURL_VER}.tar.xz)

build() {
	cd curl-${CURL_VER}

	./configure --prefix=/tools            \
		    --with-ssl                 \
		    --enable-threaded-resolver \
		    --with-ca-bundle=/tools/etc/ssl/certs/ca-certificates.crt

	make

	make install
}
