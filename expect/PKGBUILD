EXPECT_VER=5.45.4
source=(https://downloads.sourceforge.net/expect/expect${EXPECT_VER}.tar.gz)

build() {
	cd expect${EXPECT_VER}

	cp -v configure{,.orig}
	sed 's:/usr/local/bin:/bin:' configure.orig > configure

	./configure --prefix=/tools       \
	            --with-tcl=/tools/lib \
	            --with-tclinclude=/tools/include

	make

	make test

	make SCRIPTS="" install
}
