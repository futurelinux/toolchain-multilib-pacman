pkgname=ncurses
pkgver=6.3
source=(ftp://invisible-island.net/$pkgname/$pkgname-$pkgver.tar.gz)

build() {
	cd $pkgname-$pkgver

	sed -i s/mawk// configure

	./configure --prefix=/tools \
		    --with-shared   \
		    --without-debug \
		    --without-ada   \
		    --enable-widec  \
		    --enable-overwrite

	make

	make install
	ln -sv libncursesw.so /tools/lib/libncurses.so

	make distclean &&
	CC="${LFS_TGT}-gcc -m32"          \
	./configure --prefix=/tools       \
	            --libdir=/tools/lib32 \
	            --with-shared         \
	            --without-debug       \
	            --without-ada         \
	            --enable-widec        \
        	    --enable-overwrite    \
	            --host="${LFS_TGT32}"

	make

	make check

	make DESTDIR=$PWD/DESTDIR_32 install &&
	cp -Rv DESTDIR_32/tools/lib32/* /tools/lib32
}
