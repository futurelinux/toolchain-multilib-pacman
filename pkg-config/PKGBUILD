pkgname=pkg-config
pkgver=0.29.2
source=(https://pkgconfig.freedesktop.org/releases/$pkgname-$pkgver.tar.gz)

build() {
	cd  $pkgname-$pkgver

	./configure --prefix=/tools            \
	            --with-internal-glib       \
	            --disable-compile-warnings \
	            --disable-host-tool        \
	            --disable-shared

	make

	make install
}
