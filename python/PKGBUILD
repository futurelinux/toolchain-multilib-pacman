pkgname=python
pkgver=3.10.0
source=(https://www.python.org/ftp/python/$pkgver/Python-$pkgver.tar.xz)

build() {
	cd Python-$pkgver

	./configure --prefix=/tools        \
	            --enable-shared        \
	            --with-system-expat    \
	            --with-system-ffi      \
	            --with-ensurepip=yes

	make

	make install
}
