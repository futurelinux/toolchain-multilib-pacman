UTIL_LINUX_VER=2.37.2
source=(https://www.kernel.org/pub/linux/utils/util-linux/v5/util-linux-${UTIL_LINUX_VER}.tar.xz)

build() {
	cd util-linux-${UTIL_LINUX_VER}

	./configure --prefix=/tools                \
	            --without-python               \
	            --disable-makeinstall-chown    \
	            --without-systemdsystemunitdir \
	            --without-ncurses              \
	            PKG_CONFIG=""

	make

	make install

	make distclean &&
	CC="${LFS_TGT}-gcc -m32"           \
	./configure                        \
	    --prefix=/tools                \
	    --libdir=/tools/lib32          \
	    --without-python               \
	    --disable-makeinstall-chown    \
	    --without-systemdsystemunitdir \
	    --without-ncurses              \
	    --host="${LFS_TGT32}"          \
	    PKG_CONFIG=""

	make

	make DESTDIR=$PWD/DESTDIR_32 install &&
	cp -Rv DESTDIR_32/tools/lib32/* /tools/lib32
}
