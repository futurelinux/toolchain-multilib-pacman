pkgname=util-linux
pkgver=2.37.4
source=(https://www.kernel.org/pub/linux/utils/$pkgname/v${pkgver%.*}/$pkgname-$pkgver.tar.xz)

build() {
	cd $pkgname-$pkgver

	./configure --prefix=/tools                \
	            --without-python               \
	            --disable-makeinstall-chown    \
	            --without-systemdsystemunitdir \
	            --without-ncurses              \
	            PKG_CONFIG=""

	make

	make install

	make distclean &&
	CC="${LFS_TGT}-gcc -m32"           \
	./configure                        \
	    --prefix=/tools                \
	    --libdir=/tools/lib32          \
	    --without-python               \
	    --disable-makeinstall-chown    \
	    --without-systemdsystemunitdir \
	    --without-ncurses              \
	    --host="${LFS_TGT32}"          \
	    PKG_CONFIG=""

	make

	make DESTDIR=$PWD/DESTDIR_32 install &&
	cp -Rv DESTDIR_32/tools/lib32/* /tools/lib32
}
