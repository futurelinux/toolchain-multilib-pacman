pkgname=xz
pkgver=5.2.5
source=(https://tukaani.org/$pkgname/$pkgname-$pkgver.tar.xz)

build() {
	cd $pkgname-$pkgver

	./configure --prefix=/tools

	make

	make install

	make distclean &&
	CC="${LFS_TGT}-gcc -m32"  \
	./configure               \
	    --prefix=/tools       \
	    --libdir=/tools/lib32 \
	    --host="${LFS_TGT32}"

	make

	make DESTDIR=$PWD/DESTDIR_32 install
	cp -Rv DESTDIR_32/tools/lib32/* /tools/lib32
}
